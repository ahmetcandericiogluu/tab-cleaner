{
  "manifest_version": 3,
  "name": "Tab Cleaner",
  "version": "1.0",
  "description": "Tekrarlayan tableri tespit eder, highlight eder ve Shift+T ile kapatÄ±r.",
  "permissions": ["tabs", "notifications", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
   "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "clean_duplicate_tabs": {
      "suggested_key": {
        "default": "Alt+Shift+D"
      },
      "description": "Tekrarlayan tableri bul ve kapat"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_title": "Tab Cleaner"
  }
}